@model BookStoreMVC.ViewModels.BookViewModel
@{
    ViewData["Title"] = "Details";
}

<!-- Upload File Form -->

<div class="col-md-12">
    <form method="post" asp-action="UploadFile" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Name"></label>
                <input type="file" name="file" class="form-control" multiple accept=".docx, .pdf, .txt "/>
            </div>
            <div class="col-md-6">
                <label asp-for="Description"></label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary mt-5">Upload File</button>
            </div>
        </div>
    </form>
</div>
<hr/>
@if (Model.FileBooks.Count == 0)
{
    <p>No files available.</p>
}
else {
    <table class="table table-striped border-collapse border border-slate-500 table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(Model => Model.Id)</th>
            <th>@Html.DisplayNameFor(Model => Model.Name)</th>
            <th>@Html.DisplayNameFor(Model => Model.Extension)</th>
            <th>@Html.DisplayNameFor(Model => Model.Type)</th>
            <th>@Html.DisplayNameFor(Model => Model.Description)</th>
            <th>@Html.DisplayNameFor(Model => Model.UploadedDate)</th>
            <th>Download</th>
            <th>View file</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fileBook in Model.FileBooks)
        {
            <tr>
                <th>@fileBook.Id</th>
                <th>@fileBook.Name</th>
                <th>@fileBook.Extension</th>
                <th>@fileBook.Type</th>
                <th>@fileBook.Description</th>
                <th>@fileBook.UploadedDate</th>
                <th>
                    <a asp-action="Download" asp-route-fileName="@fileBook.Name" asp-route-type="@fileBook.Type"
                        class="p-2 text-dark bg-white border border-dark rounded text-decoration-none"    
                    >
                            Download
                    </a>
                </th>
                <th>
                    <a id="pdf_container" asp-action="ViewFile" asp-route-fileName="@fileBook.Name" 
                        class="p-2 text-dark bg-white border border-dark rounded text-decoration-none"    
                    >
                            View
                    </a>
                </th>
            </tr>
        }
    </tbody>
</table> 
}

